<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">
	<display-name>Archetype Created Web Application</display-name>
	<!-- 20140626 loginサーブレットの宣言 -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>mytwitter.action.Login</servlet-class>
	</servlet>
 	<!-- loginサーブレットとurlのマッピング -->
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/action</url-pattern>
	</servlet-mapping>
	<!-- 20140627 MainPageサーブレットの宣言 -->
	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>mytwitter.main.MainPage</servlet-class>
	</servlet>
 	<!-- MainPageサーブレットとurlのマッピング -->
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<!-- 20140627 Contributionサーブレットの宣言 -->
	<servlet>
		<servlet-name>contribution</servlet-name>
		<servlet-class>mytwitter.contribution.Contribution</servlet-class>
	</servlet>
 	<!-- Contributionサーブレットとurlのマッピング -->
	<servlet-mapping>
		<servlet-name>contribution</servlet-name>
		<url-pattern>/contribution</url-pattern>
	</servlet-mapping>
<resource-ref>
    <res-ref-name>jdbc/MySQLDS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>
         
</web-app>

